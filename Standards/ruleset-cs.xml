<?xml version="1.0"?>
<ruleset name="ECO4CS">
    <description>Eco4 coding standard</description>

    <rule ref="../vendor/escapestudios/symfony2-coding-standard/Symfony2/">
        <exclude name="Symfony2.WhiteSpace.AssignmentSpacing.Invalid"/>
    </rule>
    
    <!-- Use Unix newlines -->
    <rule ref="Generic.Files.LineEndings">
        <properties>
            <property name="eolChar" value="\n"/>
        </properties>
    </rule>
      
</ruleset>
